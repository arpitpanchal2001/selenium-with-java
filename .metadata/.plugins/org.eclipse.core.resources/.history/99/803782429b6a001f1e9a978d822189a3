package introduction;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class CssLocatorTwo {
	    public static void main(String[] args) {

	            // Initialize WebDriver
	            WebDriver driver = new ChromeDriver();

	            // Navigate to Wikipedia's main page
	            driver.get("https://www.wikipedia.org/");

	            // 00:10 - Locating an element using tag and attribute (search input)
	            WebElement searchInput = driver.findElement(By.cssSelector("input[type='search']"));

	            // 03:56 - Using CSS Selector with class name (main heading)
	            WebElement mainHeading = driver.findElement(By.cssSelector(".central-textlogo__image"));

	            // 11:26 - Demonstrating CSS selector with ID (search language dropdown)
	            WebElement languageDropdown = driver.findElement(By.cssSelector("#searchLanguage"));

	            // 15:14 - Using tag, class, and attribute combination (search button)
	            WebElement searchButton = driver.findElement(By.cssSelector("button.pure-button-primary-progressive[type='submit']"));

	            // 22:29 - Chaining CSS Selectors (link inside the list)
	            WebElement firstLinkInList = driver.findElement(By.cssSelector("div.central-featured-lang > a.link-box"));

	            // 25:53 - Using multiple attributes (input box for search with language dropdown)
	            WebElement inputWithAttributes = driver.findElement(By.cssSelector("input[type='search'][name='search']"));

	            // 32:29 - Various locators and attributes (English link)
	            WebElement englishLink = driver.findElement(By.cssSelector("a#js-link-box-en"));

	            // 36:04 - Understanding tag and attribute usage (span inside a link)
	            WebElement spanInLink = driver.findElement(By.cssSelector("a#js-link-box-en span"));

	            // 43:11 - Using tag, class, and attribute together (French link)
	            WebElement frenchLink = driver.findElement(By.cssSelector("a#js-link-box-fr > strong"));

	            // 46:58 - Difference between tag and class attributes (main logo)
	            WebElement logo = driver.findElement(By.cssSelector("div.central-textlogo > img"));

	            // 54:01 & 57:04 - Utilizing Selector Hub for efficient locating
	            // Selector Hub is typically a manual tool, but its principles are used to refine the selectors.

	            // 1:03:21 - Understanding differences between DOM elements and Dev tools
	            // Conceptual; use DevTools in the browser to explore DOM vs. the rendered HTML.

	            // 1:06:40 - Covering all types of CSS locators for identifying web elements
	            // This script covers various locator strategies as demonstrated above.

	            // Close the browser
	            driver.quit();
	}
	    }
